<li class="<%= task_css_classes(task) %>">
  <p><%= task.content %></p>
  <%= button_to "Done", complete_task_path(task), form_class: "complete-task"  %>
  <%= button_to "Rewind", rewind_task_path(task), form_class: "rewind-task", method: :delete %>
  <%= button_to "Delete", task_path(task), method: :delete, form_class: "delete-task" %>
</li>
